{
  "name": "use-custom-event",
  "version": "2.0.0",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "module": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./broadcast": {
      "types": "./dist/broadcast.d.ts",
      "import": {
        "default": "./dist/broadcast.js",
        "types": "./dist/broadcast.d.ts"
      },
      "module": "./dist/broadcast.js",
      "default": "./dist/broadcast.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "size": "size-limit",
    "prepublishOnly": "pnpm run build && pnpm run size"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "8.2.4",
    "@types/node": "18.15.3",
    "@types/react": "18.0.28",
    "@vitejs/plugin-react": "3.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "size-limit": "8.2.4",
    "tsup": "8.2.3",
    "typescript": "5.0.2",
    "zod": "3.21.4"
  },
  "peerDependencies": {
    "react": "^16.8.0  || ^17.0.0 || ^18.0.0",
    "zod": "^2.0.0 || ^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/drenther/use-custom-event.git"
  },
  "homepage": "https://github.com/drenther/use-custom-event#readme",
  "author": {
    "name": "Soumyajit Pathak"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "import": "{ createEventEmitter }",
      "limit": "1 kB"
    },
    {
      "path": "dist/broadcast.js",
      "import": "{ createBroadcastChannelEventEmitter }",
      "limit": "1 kB"
    }
  ],
  "keywords": [
    "react",
    "hooks",
    "custom-event",
    "event",
    "event-emitter",
    "zod",
    "broadcast-channel"
  ],
  "license": "MIT"
}
